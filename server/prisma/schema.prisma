/**
 * Prisma schema docs: https://pris.ly/d/prisma-schema
 * Prisma acts as an ORM (Object-Relational Mapper), allowing the backend
 * to interact with the PostgreSQL database using an auto-generated,
 * type-safe client instead of writing raw SQL queries.
 */

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email      String   @unique
  password   String
  trades    Trade[] 
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Trade {
  trade_id   String   @id @default(uuid())
  ticker     String
  quantity   Int
  price      Decimal   @db.Decimal(10, 2)
  trade_date DateTime  @default(now())
  user_id    Int
  user       User      @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}